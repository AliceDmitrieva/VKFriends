<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/friendPhoto"
        android:layout_width="@dimen/friendImageWidth"
        android:layout_height="@dimen/friendImageHeight"
        android:layout_gravity="center"
        android:layout_margin="@dimen/friendImageMargin"
        tools:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/friendName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/friendNameMarginStart"
        android:layout_weight="1"
        android:gravity="start"
        android:textColor="@color/colorText"
        android:textSize="@dimen/friendNameTextSize" />

</LinearLayout>
